{
  "name": "notes-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node -r dotenv/config app.js",
    "dev": "cross-env NODE_ENV=development nodemon -r dotenv/config app.js",
    "build:ui": "rm -rf build && cd ../../part2/notes/ && npm run build --prod && cp -r build ../../part3/notes-backend/",
    "deploy": "cd ../.. && git subtree push --prefix part3/notes-backend/ backend-heroku main",
    "update:server": "git add . && git commit -m 'updated server' && npm run deploy",
    "deploy:full": "npm run build:ui && git add build/ && git commit -m 'updated frontend' && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test jest --setupFiles dotenv/config --detectOpenHandles --verbose --runInBand",
    "test:dev": "cross-env NODE_ENV=test jest --setupFiles dotenv/config --detectOpenHandles --verbose --runInBand --watchAll"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.12",
    "mongoose-unique-validator": "^2.0.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.1.0",
    "jest": "^27.2.4",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.14",
    "supertest": "^6.1.6"
  }
}
